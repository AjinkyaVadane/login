<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".displayClubs">
    <android.support.design.circularreveal.CircularRevealRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:id="@+id/buttonc1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="VIEW Club1"
            android:onClick="sendC"
            android:gravity="bottom"
            android:background="@drawable/logo"/>


        <Button
            android:id="@+id/buttonc2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="130dp"
            android:text="VIEW Club2"
            android:onClick="sendC"
            android:gravity="bottom"
            android:background="@drawable/logo"/>


    </android.support.design.circularreveal.CircularRevealRelativeLayout>

</android.support.constraint.ConstraintLayout>
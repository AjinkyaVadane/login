<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/rootView"
    tools:context=".activity_ClubsManager">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="270dp">

            <Button
                android:id="@+id/Button1.1"
                android:onClick="sendMsgAddClub"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Add Club"></Button>

            <Button
                android:id="@+id/Button1.2"
                android:onClick="sendMsgModifyClub"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Modify Club"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="74dp">

            <Button
                android:id="@+id/Button2.1"
                android:layout_width="50dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="sendMsgDeleteClub"
                android:text="Delete club">

            </Button>


            <Button
                android:id="@+id/Button2.2"
                android:layout_width="50dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="viewClub"
                android:text="View club" />



        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>